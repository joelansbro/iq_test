{% extends "base.njk" %}

{% block content %}

<link rel="stylesheet" href="/stylesheets/quiz.css">
<div class="container mt-5">
    <h1>IQ Test</h1>
        <div class="d-flex justify-content-center row">
            <div class="col-md-10 col-lg-10">
                <div class="border">
                    <div class="question bg-white p-3 border-bottom">
                        <div id="question-container" class="question-container d-flex flex-row align-items-center question-title">
                            
                        </div>                  
                        </div>

                    <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-white">
                        <button id="prev-btn" onclick="prevQuestion()" class="btn btn-primary d-flex align-items-center btn-danger" type="button">
                            <i class="fa fa-angle-left mt-1 mr-1"></i>&nbsp;previous
                        </button>
                        <button id="next-btn" onclick="nextQuestion()" class="btn btn-primary border-success align-items-center btn-success" type="button">
                            Next
                            <i class="fa fa-angle-right ml-2"></i>
                        </button>
                        <a href="/result" class="btn btn-primary border-success align-items-center btn-success" id="submit-btn" style="display: none;">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="quiz.js" type="text/javascript"></script>

{% endblock %}